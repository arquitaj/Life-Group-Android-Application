<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".attendanceFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:padding="@dimen/_28sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:background="@drawable/roundstyle">

            <TextView
                android:id="@+id/txtAddNewDesciple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="ATTENDANCE FRAGMENTS"
                android:textColor="@color/new_color"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <SearchView
                style="@android:style/Widget.Material.SearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#CC0E0E"
                android:focusableInTouchMode="true"
                android:queryHint="Disciple Name" />

        </LinearLayout>
    </ScrollView>



</FrameLayout>